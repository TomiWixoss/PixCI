<?xml version="1.0" encoding="utf-8"?>
<pxvg w="16" h="16" xmlns="http://pixci.dev/pxvg">
  <palette>
    <!-- DẢI MÀU LƯỠI KIẾM LỬA (Gradient từ nóng nhất đến nguội nhất) -->
    
    <!-- Lõi kiếm nóng nhất (Mã B cũ là Trắng) -> Trắng vàng lóe sáng -->
    <color k="B" hex="#FFF59DFF" />
    
    <!-- Sát lõi kiếm (Mã D cũ là Bạc) -> Vàng rực -->
    <color k="D" hex="#FFC107FF" />
    
    <!-- Thân kiếm (Mã E cũ là Xám nhạt) -> Cam cháy -->
    <color k="E" hex="#FF7043FF" />
    
    <!-- Sống kiếm & Viền trên (Mã A cũ là Xám đen) -> Đỏ rực -->
    <color k="A" hex="#D84315FF" />
    
    <!-- Viền bóng tối bên dưới (Mã C cũ là Đen) -> Đen than ánh đỏ -->
    <color k="C" hex="#3E1404FF" />
    
    <!-- Chi tiết Hộ thủ (Mã F, G) -> Than hồng và Cam sáng -->
    <color k="F" hex="#BF360CFF" />
    <color k="G" hex="#FF9800FF" />

    <!-- DẢI MÀU CHUÔI CẦM (Giữ tone Nâu/Đen nhưng ngả chút đỏ sậm do bị nướng nóng) -->
    <color k="H" hex="#4E342EFF" />
    <color k="I" hex="#6D4C41FF" />
    <color k="J" hex="#8D6E63FF" />
    <color k="K" hex="#261A15FF" />
  </palette>

  <layer id="main">
    <!-- BÊ NGUYÊN SI CẤU TRÚC GỐC, KHÔNG SỬA 1 TỌA ĐỘ NÀO -->

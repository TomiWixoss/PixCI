    <row y="13" x1="8" x2="9" c="C" />
    <row y="15" x1="0" x2="2" c="C" />
    <dots c="A" pts="12,1 11,2 10,3 9,4 8,5 7,6 2,7 4,7 6,7 3,8 3,9 4,10 6,10 8,12 0,14" />
    <dots c="B" pts="12,2 14,2 11,3 13,3 10,4 9,5" />

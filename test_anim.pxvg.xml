<pxvg w="32" h="32" xmlns="http://pixci.dev/pxvg">
    <!-- Sử dụng color tuỳ chỉnh thay vì pic-8 -->
    <palette>
        <color k="09" hex="#6ABE30FF" /> <!-- Màu xanh lá của thân -->
        <color k="10" hex="#37946EFF" /> <!-- Bóng tối -->
        <color k="01" hex="#1A1C2CFF" /> <!-- Đen của mắt -->
    </palette>

    <!-- 1. KHU VỰC ĐỊNH NGHĨA (Chỉ vẽ 1 lần, không hiển thị ngay) -->
    <defs>
        <!-- Bộ phận 1: Thân con Slime -->
        <group id="slime_body">
            <dome cx="16" y="28" w="20" h="12" c="09" />
            <row y="28" x1="6" x2="26" c="10" /> <!-- Bóng mờ dưới đáy -->
        </group>

        <!-- Bộ phận 2: Đôi mắt -->
        <group id="slime_eyes">
            <rect x="12" y="20" w="2" h="3" c="01" />
            <rect x="18" y="20" w="2" h="3" c="01" />
        </group>
    </defs>

    <!-- 2. KHU VỰC ANIMATION (Spritesheet sinh ra từ đây) -->
    <animation name="idle" columns="4"> <!-- Sẽ tạo ảnh PNG 128x32 (4 frames) -->
        
        <!-- Frame 1: Trạng thái đứng im -->
        <frame id="f1">
            <use ref="slime_body" x="0" y="0" />
            <use ref="slime_eyes" x="0" y="0" />
        </frame>

        <!-- Frame 2: Nhún xuống chuẩn bị nảy -->
        <frame id="f2">
            <!-- Thân bị dẹp xuống, mắt tụt xuống 1 pixel -->
            <dome cx="16" y="28" w="22" h="8" c="09" /> <!-- Dạng hình học đổi nên vẽ lại -->
            <use ref="slime_eyes" x="0" y="2" /> <!-- Mắt chỉ cần xê dịch -->
        </frame>

        <!-- Frame 3: Nảy lên không trung -->
        <frame id="f3">
            <use ref="slime_body" x="0" y="-4" /> <!-- Toàn bộ thân bay lên 4 pixel -->
            <use ref="slime_eyes" x="0" y="-4" />
        </frame>

        <!-- Frame 4: Rơi xuống (Giống Frame 1 nhưng mắt mở to xíu) -->
        <frame id="f4">
            <use ref="slime_body" x="0" y="0" />
            <use ref="slime_eyes" x="0" y="1" />
        </frame>
    </animation>

    <!-- Postprocess sẽ tự động apply cho TỪNG FRAME trước khi ghép thành Spritesheet -->
    <postprocess>
        <outline sel-out="false" color="#1A1C2CFF" thickness="1" />
    </postprocess>
</pxvg>
